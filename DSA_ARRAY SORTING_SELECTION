#include<stdio.h>
void main()
{
	int i,j,n,x;
	int a[100];
	printf("enter the number to be stored in the array:- ");
	scanf("%d",&n);
	printf("ENTER the values");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	for(i=0;i<n-1;i++)
	{
		int max=i;
		for(j=i+1;j<n;j++)
		{
			if (a[max]<a[j])
			{
				max=j;
			}
			int t=a[max];
			a[max]=a[j];
			a[j]=t;
		}
	}
	printf("the sorted array:- ");
	for(i=0;i<n;i++)
	{
		printf("%d \n",a[i]);
	}
}
