#include<stdio.h>

void traverse(int arr[],int n)
{
	printf("the array is\n");
	for(int i=0;i<n;i++)
	{
		//scanf("%d",&arr[i]);
		printf("%d " , arr[i]) ;
	}
	printf("\n") ;
}
void bubblesort(int arr[],int n)
{
	for(int i=0;i<n;i++)
	{
		for(int j=0;j<n-i-1;j++)
		{
			if(arr[j]>arr[j+1])
			{
				int temp;
				temp=arr[j];
				arr[j]=arr[j+1];
				arr[j+1]=temp;
			}
		}
	}
}	
int main()
{
	int arr[20],n;
	printf("enter the number of elements.\n");
	scanf("%d" , &n) ;
	printf("Value of n is: %d\n" , n) ;
	for(int i=0;i<n;i++)
	{
		printf("Enter the element in index: %d\n" , i + 1);
		scanf("%d",&arr[i]);
	}
	//printf("the previous array",traverse(arr,n));
	traverse(arr , n) ;
	bubblesort(arr,n);
	traverse(arr , n) ;
	//printf("enter the sorted array",traverse(arr,n));
	return 0;
}	
		
	
